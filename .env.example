# Database Configuration
DATABASE_URL="postgresql://packex_user:packex_password@localhost:5432/packex_db?schema=public"

# Storage Configuration
# Options: LOCAL, AWS_S3, GOOGLE_DRIVE
STORAGE_PROVIDER=LOCAL

# Local Storage Configuration (when STORAGE_PROVIDER=LOCAL)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (when STORAGE_PROVIDER=AWS_S3)
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Google Drive Configuration (when STORAGE_PROVIDER=GOOGLE_DRIVE)
GOOGLE_DRIVE_CLIENT_ID=your-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token
GOOGLE_DRIVE_FOLDER_ID=your-folder-id
